<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="FW_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fw_colorPrimary</item>
        <item name="colorPrimaryDark">@color/fw_colorPrimaryDark</item>
        <item name="colorAccent">@color/fw_colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>
    <style name="FW_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@color/fw_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    <style name="FW_Anim_Activity" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:activityOpenEnterAnimation">@anim/fw_activity_into_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/fw_activity_exit_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/fw_activity_exit_into_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/fw_activity_exit_exit_anim</item>
    </style>
</resources>